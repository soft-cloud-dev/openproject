<%=
  primer_form_with(
    id: "saml-providers-edit-form",
    model: provider,
    url:,
    method: form_method,
  ) do |form|
    flex_layout do |flex|
      if @heading
        flex.with_row do
          render(Primer::Beta::Text.new(tag: :p, mb: 4, font_size: :small)) do
            @heading
          end
        end
      end

      flex.with_row do
        render(@form_class.new(form, provider:))
      end

      flex.with_row(mt: 4) do
        render(Saml::Providers::SubmitOrCancelForm.new(form,
                                                       provider:))
      end
    end
  end
%>
