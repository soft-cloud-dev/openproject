<%=
  primer_form_with(
    model: provider,
    url: saml_provider_path(provider, state: :mapping),
    method: :put
  ) do |form|
    flex_layout do |flex|
      flex.with_row do
        render(Primer::Beta::Text.new(tag: :p, mb: 4, font_size: :small)) do
          t("saml.instructions.requested_attributes")
        end
      end

      flex.with_row do
        render(Saml::Providers::RequestAttributesForm.new(form, provider:))
      end

      flex.with_row(mt: 4) do
        render(Saml::Providers::SubmitOrCancelForm.new(form,
                                                       provider:))
      end
    end
  end
%>
