<%=
  grid_layout('op-saml-view-row', tag: :div, align_items: :center) do |grid|
    grid.with_area(:title, mr: 3) do
      concat render(Primer::Beta::Text.new(font_weight: :bold)) { t("saml.providers.label_configuration_details") }
      if provider.configured?
        concat render(Primer::Beta::Label.new(scheme: :success, ml: 1)) { t(:label_completed) }
      elsif provider.persisted?
        concat render(Primer::Beta::Label.new(scheme: :attention, ml: 1)) { t(:label_incomplete) }
      end
    end

    grid.with_area(:description) do
      render(Primer::Beta::Text.new(tag: :p, font_size: :small, color: :subtle)) do
        t("saml.providers.section_texts.label_configuration_details")
      end
    end

    if provider.persisted?
      grid.with_area(:action) do
        flex_layout(justify_content: :flex_end) do |icons_container|
          icons_container.with_column do
            render(
              Primer::Beta::IconButton.new(
                icon: :pencil,
                tag: :a,
                scheme: :invisible,
                href: edit_saml_provider_path(provider, edit_state: :configuration),
                aria: { label: I18n.t(:label_edit) }
              )
            )
          end
        end
      end
    end
  end
%>
